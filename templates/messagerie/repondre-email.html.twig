{% extends 'base.html.twig' %}

{% block title %}{{parent()}} {{email.objet}} {% endblock %}
{% block stylesheet %}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">{% endblock %}
{% block body %}
<div class="container mt-4">
    <div class="container p-4 rounded border border-grey">
        <h1 class="h3 w-100"><a href=""></a></h1> <i <span class="h6">envoyer par <a href="" class="text-blue">{{email.sender.email}}</a></span>
            <div class="list-group mt-2">
                <a href="#" class="list-group-item list-group-item-action">Objet : {{email.objet}}</a>

                <a href="#" class="list-group-item list-group-item-action">Message : {{email.message}}</a>

            </div>
    </div>

    <div class="container">

        {% if email.reponses.count == 0 %}
        <span>Il y a aucune réponse</span>
        {% else %}
        <h1 class="text-center h1 text-dark">REPONSE : </h1>
        {% endif %}
        {% for reponse in email.reponses %}
        <div class="container rounded-2  p-4 mt-2 bg-dark text-white">
            <span><a href="" class="text-info"> {{ reponse.employer.email }}</a>
            </span>
            <p class="m-3">{{ reponse.message }}</p>
        </div>
        {% endfor %}
        <hr class="bg-dark m-4 ">
        <div class="container mt-4">
            {{ form_start(formReponse) }}

            {{ form_row(formReponse.message) }}
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-dark" id="sendEmail">Répondre</button>
            </div>
            {{ form_end(formReponse) }}
        </div>
    </div>
</div>
{% endblock %}